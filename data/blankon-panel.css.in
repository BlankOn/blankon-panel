@define-color bg_color #00112B;
@define-color fg_color #f2f2f2;
@define-color window_desc_bg_color #4e70b0;
@define-color window_desc_fg_color #00001e;
@define-color window_desc_bg_minimized_color #606090;
@define-color window_desc_fg_minimized_color #010101;
@define-color window_desc_bg_hover_color #a0a0a0;
@define-color window_desc_fg_hover_color #010101;

@define-color clock_fg_color #eeeeee; 

@define-color hover_gradient_color_a #0044AA;
@define-color hover_gradient_color_b #0063F8;


PanelWindowHost
{
    color: @fg_color;
    background-color: @bg_color; 
}

PanelMenuBox {
    color: @fg_color;
    background-color: @bg_color; 
}

PanelTray {
    background-color: @bg_color; 
}

GtkWindow {
    color: @fg_color;
    background-color: @bg_color;
}

GtkMenu {
    color: @fg_color;
    background-color: @bg_color;
}

GtkMenuItem:hover {
    color: #ffffff;
    background-color: #0044AA; 
}


PanelMenuContent > GtkSeparator {
    background-color: #000000;
}

PanelItem {
    color: #aaaaaa;
    font: Sans Bold;
}

PanelItem:prelight {
    color: #ffffff;
    background-image: -gtk-gradient (linear,
                    left top,
                    left bottom,
                    from (@hover_gradient_color_a),
			  color-stop (0.35, @hover_gradient_color_a),
			  color-stop (0.68, @hover_gradient_color_b),
                    to (@hover_gradient_color_b)); 
}

PanelWindowPager,
PanelWindowEntry {
    background-color: #003380;
    color: #cccccc; 
}

PanelWindowEntry:selected {
    background-color: #AA0000; 
    color: #ffffff;
}

PanelWindowEntry:active {
    background-color: #0044AA; 
    color: #ffffff; 
}

PanelWindowEntry:prelight {
    background-image: -gtk-gradient (linear,
                    left top,
                    left bottom,
                    from (@hover_gradient_color_a),
			  color-stop (0.35, @hover_gradient_color_a),
			  color-stop (0.68, @hover_gradient_color_b),
                    to (@hover_gradient_color_b)); 
    color: #ffffff; 
}

PanelWindowEntry:insensitive {
    background-color: #333333; 
    color: #808080;
}

PanelClock {
    font: Sans Bold;
    color: @clock_fg_color;
    background-color: rgba(0.5, 0.5, 0.5, 0.5);
    border-color: #000000;
    border-style: solid;
    border-width: 25;
    border-radius: 10;
}
